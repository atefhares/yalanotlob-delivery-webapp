<div class="signup-form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h2>Register</h2>
    <p class="hint-text">Create your account. It's free and only takes a minute.</p>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "First Name", required: true %>
    </div>
    <div class="form-group">
      <%= f.text_field :last_name, autofocus: true, class: "form-control", placeholder: "Last Name", required: true %>
    </div>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email", required: true %>
    </div>

    <div class="form-group">
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br/>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password", required: true %>
    </div>

    <div class="field form-group mb-2">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm Password", required: true %>
    </div>

    <br/>
    <div class="form-group">
      <%= f.label "Upload your new profile picture below!", class: "form-label" %>
      <%= f.file_field :avatar %>
    </div>
    <br/>

    <div class="form-group">
      <label class="checkbox-inline"><input type="checkbox" required="required"> I accept the
        <a href="#">Terms of Use</a> &amp; <a href="#">Privacy Policy</a></label>
    </div>

    <div class="form-group">
      <%= f.submit "Register Now", class: "btn btn-success btn-lg btn-block" %>
    </div>

    <div class="text-center">Already have an account? <%= render "devise/shared/links" %></div>

  <% end %>

</div>
