<!DOCTYPE html>
<html>
<head>
  <title>Yalanotlob</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <!--  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>-->
</head>

<body>
<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <%= link_to "YallaNotlob", root_path, class: "navbar-brand" %>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Friends", friends_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Groups", groups_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Orders", "/orders/show/", class: "nav-link" %>
        </li>
      </ul>
      <!--      <form class="form-inline my-2 my-lg-0">-->
      <!--        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">-->
      <!--        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>-->
      <!--      </form>-->


      <% if user_signed_in? %>
        <ul class="notification navbar-nav navbar-right">
          <li class="dropdown">
            <a class="nav-link dropdown-toggle" href="" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fas fa-bell"></i>
              <span class="label label-danger">11</span>
            </a>
            <ul class="dropdown-menu dropdown-menu-right notify-drop">
              <div class="notify-drop-title">
                <div class="row">
                  <div class="col-md-6 col-sm-6 col-xs-6">Notifications (<b>11</b>)</div>
                  <div class="col-md-6 col-sm-6 col-xs-6 text-right">
                    <a href="" class="rIcon allRead" data-tooltip="tooltip" data-placement="bottom" title="mark all as read"><i class="fa fa-dot-circle-o"></i></a>
                  </div>
                </div>
              </div>
              <!-- end notify title -->
              <!-- notify content -->
              <div class="drop-content">
                <li>
                  <div class="col-md-3 col-sm-3 col-xs-3">
                    <div class="notify-img"><img src="http://placehold.it/45x45" alt=""></div>
                  </div>
                  <div class="col-md-9 col-sm-9 col-xs-9 pd-l0">
                    <a href="">Ali</a> invited you to an
                    <a href="">Order</a>
                    <a href="" class="rIcon"><i class="fa fa-dot-circle-o"></i>
                    </a>
                    <hr>
                    <p class="time">Now</p>
                  </div>
                </li>

              </div>
              <div class="notify-drop-footer text-center">
                <a href=""><i class="fa fa-eye"></i> Show all notifications</a>
              </div>
            </ul>
          </li>
        </ul>

        <ul class="navbar-nav navbar-right">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <% if current_user.avatar.attached? %>
                <%= image_tag current_user.avatar, width: "40", height: "40", class: "rounded-circle" %>
              <% else %>
                <img src="https://s3.eu-central-1.amazonaws.com/bootstrapbaymisc/blog/24_days_bootstrap/fox.jpg" width="40" height="40" class="rounded-circle">
              <% end %>
              <%= current_user.first_name %>
              <%= current_user.last_name %>
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
              <!--              <a class="dropdown-item" href="#">Dashboard</a>-->
              <!--              <a class="dropdown-item" href="#">Edit Profile</a>-->
              <a class="dropdown-item" href="<%= destroy_user_session_path %>" data-method="DELETE">Log Out</a>
            </div>
          </li>
        </ul>
      <% end %>
    </div>
  </nav>
</header>

<div class="container">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <%= yield %>
</div>
</body>
</html>